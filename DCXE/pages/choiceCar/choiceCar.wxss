  }
  .mapCard > .card_js{
    position: absolute;
    left: 285rpx;
    font-size: 26rpx;
    color: #666666;
    bottom: 83rpx;
  }
  .addressCard{
      position: absolute;
      bottom: 35rpx;
      left: 285rpx;
  }
  .greyaddress{
    width: 16rpx;
    height: 22rpx;
    }
  .address{
      margin-left: 16rpx;
      font-size: 26rpx;
      color: #666666;
  }
  .mapCard > .btn{
    position: absolute;
    color: #84c12f;
    font-size: 28rpx;
    right: 10%;
    display: block;
    top: 50%;
    margin-top: -14rpx;
    border: 0;
    text-decoration: underline ;
  }
